block var

doctype html

html(lang="en")
	head
		title #{title}
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0, user-scalable=no")
		meta(http-equiv="X-UA-Compatible", content="ie=edge")
		link(rel='shortcut icon', type='image/png', href='/favicon/favicon.ico')
		link(rel="stylesheet", href="./css/core.min.css")
		link(rel="stylesheet", href="./css/main.min.css")
	body
		block loading
		block header
			include _header.pug
		block banner,breadcrumb
		main
			block main
			#js-page-verify(class=bodyClass hidden)
		block partner
			include _partner
		block footer
			include _footer.pug
		block faketoolbar
			.fake-toolbar
		#overlay
		#back_to_top
			img.lazyload.blur-up(data-src="./assets/images/home/back-to-top.png", alt="BACK-TO-TOP")
		block scripts
		script(type="text/javascript", src='https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v3.3')
		script(src="https://apis.google.com/js/platform.js?onload=myFunc")
		script(type="text/javascript", src="./js/AccountController.min.js")
		script(type="text/javascript", src="./js/core.min.js")
		script(type="text/javascript", src="./js/main.min.js")
		script(type="text/javascript", src="./js/cart.min.js")